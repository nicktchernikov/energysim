<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=2, user-scalable=no"
    />
    <meta
      name="description"
      content="Semantic-UI-Forest, collection of design, themes and templates for Semantic-UI."
    />
    <meta name="keywords" content="Semantic-UI, Theme, Design, Template" />
    <meta name="author" content="PPType" />
    <meta name="theme-color" content="#ffffff" />
    <title>EnergySim</title>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js" crossorigin="anonymous"></script>
    <script src="./js/range.js"></script>

    <link
      rel="stylesheet"
      type="text/css"
      href="./css/semantic.pulse.css"
      />
    <link 
      rel="stylesheet"
      type="text/css"
      href="./css/range.css"
      />
    <link 
      rel="stylesheet"
      type="text/css",
      href="./css/styles.css"
      />

    <style>
        td {padding: 10px;}
        th {padding: 10px;}
    </style>

</head>

  <body id="root">
    <div class="ui top fixed inverted menu">
      <div class="ui container">
        <a class="header item title" href="/">
            EnergySim
        </a>
        <a class="item" href="/">Setup</a>
        <a class="item" href="/generate">Generate</a>
        <a class="item" href="/results">Results</a>
      </div>
    </div>

    <div class="ui main text container">
        <div class="ui segment"> 
            <!-- load setup filename dropdown -->
            <h1 class="ui header">Load Setup</h1>
            <div class="ui selection dropdown">
                <input type="hidden" name="filename">
                <i class="dropdown icon"></i>
                <div class="default text">Choose filename</div>
                <div class="menu" id="setupFilenames"></div>
            </div>
            <div class="ui blue button" id="loadSetupFileButton">Load</div>
            <!-- /end setup filename dropdown -->
        </div> <!-- /end segment -->

        <div id="loaded" class="ui segment"> 
            <div class="ui grid">
                <div class="column">
                    <div id="setupIdBox">
                        <span id="setupId" style="font-weight: bold;"></span> loaded
                    </div>

                    <div id="setupData">
                        setup data goes here
                    </div>

                    <br />
                    <div class="ui blue button" id="generateButton" >Generate Next Week</div>
                    <br/>
                    <div id="loading" style="margin-top: 10px;">Generating...</div>
                    
                    {{!-- <div id="generateMessage" style="margin-top: 10px;">
                        Done! <a href='/results'>View Results</a>              
                    </div> --}}
                
                </div>
            </div>
        </div>

    </div> <!-- /end main -->

    <script>
        // Get appliance types
        let applianceTypes = [];
        $.getJSON('/applianceInits', (data) => {
            $.each(data, (key, val) => {
                applianceTypes.push(val.type);
            });
        });

        // Get room types 
        let roomTypes = [
            'bathroom', 'laundry room', 'bedroom', 
            'living room', 'kitchen', 'basement'
        ];

        // DOM loaded
        $(document).ready(() => {
            // Activate UI elements
            activateUI();

            // Load setup filenames into dropdown
            loadSetupFilenames();

            // Set listeners
            $('#loadSetupFileButton').click(()=> {
                let filename = $('input[name="filename"]').val();
                let setupId = filename.split('.')[0];
                setupId = setupId + "_iterative";
                console.log(setupId);
                $('#setupId').html(setupId);
                $('#loaded').show();

                // TODO: 
                // - if there is an output file already, load the most 
                // recent week's consumption
                // - if there is no output file already, load
                // the setup of rooms/appliances

                let outputExists = false;
                $.get('/iterativeOutputExists/'+setupId, (res) => {
                    outputExists = res.outputExists;
                    if(outputExists) {
                        // Output exists
                        displayData(setupId);
                    } else {
                        // Output doesn't exist yet

                        // Generate 1st week of data and display it: 
                        $.get("/generateIterative/"+setupId, (res) =>{
                            if(res.done) {
                                displayData(setupId);
                            }
                        });
                    }
                });
            
            });
            $('#generateButton').click(()=> {
                $('#generateMessage').hide();
                $('#loading').show();

                let roomGoals = [];
                $.each($("table").find("input"), (key, value) => {
                    goal = $(value).val();
                    room_id = $(value).attr('id');
                    if(goal && goal > 0) {
                        roomGoals.push({
                            "room_id" : room_id,
                            "goal" : goal
                        });
                    }
                });
                
                let setupId = $('#setupId').text();
                $.post('/generateIterative', {"outputId" : setupId, "roomGoals" : JSON.stringify(roomGoals)}, (res) => {
                    $('#loading').hide();
                })
                .done(function() {
                    displayData(setupId);
                    $('#loading').hide();
                });
            });
        });

        // Functions
        function activateUI() {
            $('.ui.selection.dropdown').dropdown();
        }
        function loadSetupFilenames() {
            $.getJSON('/getSetups', (data) => {
                data.forEach((setupFilename) => {
                    setupFilename = setupFilename.split('.')[0];
                    $('#setupFilenames').append(
                        '<div class="item" data-value="'+setupFilename+'">'+setupFilename+'</div>'
                    );
                });
            });
        }
        function displayData(setupId) {
            $.get('/getOutputTotalJSON/'+setupId, (data)=> {
                let settings = data[0];
                weekNum = settings.weekNum; 
                let rooms = data[1];
                let html = '<table border=1><caption>'+setupId+';  week '+weekNum+'; watchfulness: '+settings.watchfulness+'</caption>';
                
                html += '<th> room name </th>';
                html += '<th> total consumption </th>';
                html += '<th> unit </th>';
                html += '<th> set next week goal </th>';                           

                $.each(rooms, (_, room) => {
                    html += '<tr><td>'+room.room_id+'</td>';
                    html += '<td>'+room.weekly.totals[parseInt(room.weekly.totals.length)-1]+'</td>';
                    total = parseInt(room.weekly.totals[parseInt(room.weekly.totals.length)-1]);
                    console.log(room.weekly.goals);
                    goal = parseInt(room.weekly.goals[parseInt(room.weekly.goals.length)-2]);

                    console.log(total, goal);

                    diff = total - goal;    
                    if(total == 0 && goal == 0) {
                        slider = 0.0;
                    } else { 
                        slider = Math.min(Math.max(diff/goal, 0.0), 1.0);
                    }
                    html += '<td>'+slider+'</td>';
                    html += '<td><input class="goal" id="'+room.room_id+'" type="number"></td>';
                    html += '</tr>';
                });
                html += '</table>';

                $('#setupData').html(html);
            });
        }
    </script>

  </body>
</html>